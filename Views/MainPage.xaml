<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto3_pago.MainPage">

    <StackLayout Padding="20">
        <Label Text="Balance Total:" FontAttributes="Bold"/>
        <Label Text="{Binding Balance, StringFormat='${0:F2}'}"/>

        <Label Text="Total Ingresos:" />
        <Label Text="{Binding TotalIngresos, StringFormat='${0:F2}'}"/>

        <Label Text="Total Gastos:" />
        <Label Text="{Binding TotalGastos, StringFormat='${0:F2}'}"/>

        <Button Text="Agregar Transacción" Command="{Binding GoToAddTransactionCommand}" />

        <CollectionView ItemsSource="{Binding Transacciones}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Margin="5">
                        <Label Text="{Binding Fecha, StringFormat='{0:dd/MM}'}" WidthRequest="60"/>
                        <Label Text="{Binding Tipo}" WidthRequest="70"/>
                        <Label Text="{Binding Monto, StringFormat='${0:F2}'}" WidthRequest="80"/>
                        <Label Text="{Binding Descripcion}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
