<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto3_pago.AddTransaction">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="Glosa"/>
            <Entry Text="{Binding NuevaTransaccion.Detail}" FontSize="16" Keyboard="Text" TextColor="Black" />

            <Label Text="Cantidad"/>
            <Entry Text="{Binding NuevaTransaccion.Amount}" FontSize="16" Keyboard="Numeric" TextColor="Black" />

            <Label Text="Fecha"/>
            <DatePicker Date="{Binding NuevaTransaccion.Date}" FontSize="16" Format="d"/>

            <CheckBox/>
            <Label Text="¿Es ingreso?"/>

        <Button Text="Agregar" Command="{Binding GuardarTransaccionCommand}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
